{
  "name": "get-clam",
  "version": "0.1.0",
  "description": "clam: a shell-like interface for Claude Code and other agents",
  "license": "MIT",
  "author": "Joshua Levy <joshua@cal.berkeley.edu> (https://github.com/jlevy)",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "clam": "./dist/bin.mjs"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=22"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jlevy/clam.git",
    "directory": "packages/clam"
  },
  "homepage": "https://github.com/jlevy/clam#readme",
  "bugs": {
    "url": "https://github.com/jlevy/clam/issues"
  },
  "keywords": [
    "cli",
    "claude-code",
    "ai-agents",
    "acp",
    "terminal",
    "shell"
  ],
  "scripts": {
    "prebuild": "cp ../../README.md ./README.md",
    "build": "tsdown",
    "dev": "tsx watch src/bin.ts",
    "start": "tsx src/bin.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run && tryscript run tests/*.tryscript.md",
    "test:unit": "vitest run",
    "test:golden": "tryscript run tests/*.tryscript.md",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "publint": "publint",
    "prepack": "pnpm build",
    "test:install": "pnpm build && pnpm pack && npm install -g ./get-clam-*.tgz && rm ./get-clam-*.tgz",
    "test:uninstall": "npm uninstall -g get-clam"
  },
  "dependencies": {
    "@agentclientprotocol/sdk": "^0.13.1",
    "@zed-industries/claude-code-acp": "^0.14.0",
    "cli-highlight": "^2.1.11",
    "dotenv": "^16.4.5",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^22.19.7",
    "@vitest/coverage-v8": "^2.1.9",
    "publint": "^0.3.17",
    "tryscript": "^0.1.6",
    "tsdown": "^0.20.1",
    "tsx": "^4.21.0",
    "vitest": "^2.1.9"
  }
}
