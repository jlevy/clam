{
  "name": "get-clam",
  "version": "0.1.0",
  "description": "clam: a shell-like interface for Claude Code and other agents",
  "license": "MIT",
  "author": "Joshua Levy <joshua@cal.berkeley.edu> (https://github.com/jlevy)",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "clam": "./dist/bin.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=22"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jlevy/clam.git",
    "directory": "packages/clam"
  },
  "homepage": "https://github.com/jlevy/clam#readme",
  "bugs": {
    "url": "https://github.com/jlevy/clam/issues"
  },
  "keywords": [
    "cli",
    "claude-code",
    "ai-agents",
    "acp",
    "terminal",
    "shell"
  ],
  "scripts": {
    "prebuild": "cp ../../README.md ./README.md",
    "build": "bunup",
    "dev": "bun --watch src/bin.ts",
    "start": "bun src/bin.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "bun test && tryscript run tests/cli.tryscript.md",
    "test:unit": "bun test",
    "test:golden": "tryscript run tests/*.tryscript.md",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "publint": "publint",
    "prepack": "bun run build",
    "test:install": "bun run build && bun pm pack && npm install -g ./get-clam-*.tgz && rm ./get-clam-*.tgz",
    "test:uninstall": "npm uninstall -g get-clam"
  },
  "dependencies": {
    "@agentclientprotocol/sdk": "^0.13.1",
    "@zed-industries/claude-code-acp": "^0.14.0",
    "cli-highlight": "^2.1.11",
    "dotenv": "^16.4.5",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/marked-terminal": "^6.1.1",
    "@types/node": "^22.19.7",
    "bun-types": "^1.3.8",
    "bunup": "^0.16.22",
    "publint": "^0.3.17",
    "tryscript": "^0.1.6"
  }
}
