{
  "name": "clam-workspace",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "prepare": "lefthook install",
    "build": "bun run --filter '*' build",
    "typecheck": "bun run --filter '*' typecheck",
    "test": "bun run --filter '*' test",
    "test:coverage": "bun run --filter get-clam test:coverage",
    "publint": "bun run --filter '*' publint",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome check --write . && bun run typecheck",
    "lint:check": "biome check . && bun run typecheck",
    "check": "biome check --write .",
    "precommit": "bun run check && bun run typecheck && bun run build && bun run test",
    "ci": "biome ci . && bun run typecheck && bun run build && bun run test",
    "changeset": "changeset",
    "version-packages": "changeset version && bun update",
    "release": "bun run build && bun run publint && bun run publish-packages",
    "publish-packages": "for dir in packages/*; do (cd \"$dir\" && bun publish || true); done && changeset tag",
    "upgrade:check": "bunx npm-check-updates --format group",
    "upgrade": "bunx npm-check-updates --target minor -u && bun install && bun run test",
    "upgrade:major": "bunx npm-check-updates --target latest --interactive --format group",
    "clam": "bun packages/clam/src/bin.ts",
    "clam:dev": "bun --watch packages/clam/src/bin.ts",
    "test:install": "bun run --filter get-clam test:install",
    "test:uninstall": "bun run --filter get-clam test:uninstall"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@changesets/cli": "^2.29.8",
    "lefthook": "^1.11.13",
    "npm-check-updates": "^17.1.18",
    "typescript": "^5.9.3"
  }
}
